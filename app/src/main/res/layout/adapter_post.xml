<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/text_margin"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/recommend_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/recommend_avatar"
                android:layout_width="@dimen/avatar_size"
                android:layout_height="@dimen/avatar_size"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_avatar_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recommend_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/primary_text_default_material_light"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/recommend_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Small Text"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/secondary_text_default_material_light" />
            </LinearLayout>
        </LinearLayout>

        <org.itishka.pointim.widgets.MyTextView
            android:id="@+id/recommend_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:text="recommend test with some many letttttttttters and so on as it can be"
            android:textColor="@color/primary_text_default_material_light" />

        <View
            android:id="@+id/quote_mark_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/transparent" />

        <LinearLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/quote_background"
            android:orientation="horizontal">

            <View
                android:id="@+id/quote_mark"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/material_blue_700" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="4dp"
                android:paddingTop="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_quote_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/avatar"
                        android:layout_width="@dimen/avatar_size"
                        android:layout_height="@dimen/avatar_size"
                        android:src="@drawable/ic_launcher" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/text_avatar_margin"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/author"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/primary_text_default_material_light"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Small Text"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/post_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/post_id"
                        android:drawableLeft="@drawable/postidleft"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:paddingRight="4dp"
                        android:text="#xxx"
                        android:textColor="@android:color/secondary_text_light"
                        android:textStyle="bold" />
                </LinearLayout>

                <org.itishka.pointim.widgets.FlowLayout
                    android:id="@+id/tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_quote_margin"
                    android:layout_marginRight="@dimen/text_margin"
                    android:layout_marginTop="4dp" />

                <org.itishka.pointim.widgets.MyTextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_quote_margin"
                    android:layout_marginRight="@dimen/text_margin"
                    android:text="test with some many letttttttttters and so on as it can be"
                    android:textColor="@color/primary_text_default_material_light" />

                <org.itishka.pointim.widgets.ImageList
                    android:id="@+id/imageList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/dividerVertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/action_recommend"
                style="@style/Widget.AppCompat.Light.ActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share_grey600_24dp" />

            <CheckBox
                android:id="@+id/favourite"
                style="@style/Widget.AppCompat.Light.ActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableLeft="@drawable/ic_star_outline_grey600_24dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/weblink"
                style="@style/Widget.AppCompat.Light.ActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_earth_grey600_18dp" />

            <TextView
                android:id="@+id/comments"
                style="@style/Widget.AppCompat.Light.ActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_message_reply_grey600_18dp"
                android:gravity="center"
                android:minWidth="65dp"
                android:text="111"
                android:textColor="@color/secondary_text_default_material_light" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>