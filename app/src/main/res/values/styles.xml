<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="textColorPrimaryInverse">@color/white</item>

        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowNoTitle">true</item>

        <item name="android:spinnerDropDownItemStyle">
            @style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar
        </item>
        <item name="actionModeShareDrawable">@drawable/ic_share_variant_white_24dp</item>
        <item name="scrollButtonStyle">
            @style/AppTheme.ScrollButtonStyle
        </item>
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
        <item name="toolbarTheme">@style/AppTheme.ToolbarTheme</item>
    </style>

    <style name="AppTheme.ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.PopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">?attr/md_background_color</item>
    </style>

    <style name="AppTheme.ScrollButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="AppTheme.LoginForm.Base" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="AppTheme.LoginForm" parent="AppTheme.LoginForm.Base"></style>

    <style name="AppTheme.ImageListItem">
        <item name="android:maxWidth">384dp</item>
        <item name="android:layout_height">192dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="PrimaryButtonStyle" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">?attr/colorAccent</item>
    </style>
</resources>
